<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/logo"
    tools:context=".views.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC333131"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash_imgLogo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_wonderful" />

        <TextView
            android:id="@+id/txtSambutan"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splash_imgLogo"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="33dp"
            android:gravity="center"
            android:text="E-Borobudur"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:indeterminateTint="@color/purple_200" />
    </LinearLayout>
</RelativeLayout>